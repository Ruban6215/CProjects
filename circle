#include <stdio.h>
#include <conio.h>
void main()
{
    float r,a,c;
    printf("Enter the radius of the circle: ");
    scanf("%f",&r);
    a=((r*r)*22/7);
    printf("\nThe area of the circle is %f",a);
    c=(2*r*22/7);
    printf("\nThe circumference of the circle is %f",c);
    getch();
}

